{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@luna-view/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", "**/__tests__", "**/dist"]
}
